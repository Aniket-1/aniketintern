<%- include("essentials/header") %>


<h1 class="view-header"> CUSTOMERS LIST </h1>

<div class='table'>

        <table  style="color:black; font-weight: 780; border:1" >
            <tr>
                <th>Customer Name</th>
                <th>Email ID</th>
                <th>Balance</th>
                <th></th>
            </tr>
            <% for(let user of users){ %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email%></td>
                    <td><%= user.balance%></td>
                    <td><button class="select-btn"><a href="/viewusers/<%= user._id %>">Select Customer</a></button></td>
                </tr>
            <% } %>
        </table>
</div>


